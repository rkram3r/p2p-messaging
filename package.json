{
  "name": "p2p-messaging",
  "version": "1.0.0",
  "description": "fully-distributed, P2P messaging application with an integrated, blockchain-based notary service.",
  "main": "index.js",
  "repository": "git@github.com:rkram3r/p2p-messaging.git",
  "author": "rkram3r <skill8r@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"npm run watch:server\" \"npm run watch:client\"",
    "watch:client": "parcel ./src/index.html --open",
    "watch:server": "nodemon ./server 3030 --ignore 'src/*'"
  },
  "dependencies": {
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "socket.io-p2p": "^2.2.0",
    "socket.io-p2p-server": "^1.2.0"
  },
  "devDependencies": {
    "@types/socket.io-p2p": "^2.2.0",
    "concurrently": "^4.0.1",
    "node-sass": "^4.9.4",
    "@babel/core": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "nodemon": "^1.18.4",
    "parcel": "^1.10.3"
  }
}
